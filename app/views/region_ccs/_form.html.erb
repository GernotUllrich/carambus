<%= form_with(model: region_cc) do |form| %>
  <%= render "error_messages", resource: form.object %>

    <div class="form-group">
      <div><%= form.label :public_url %> z.B. https://ndbv.club-cloud.de/</div>
      <%= form.text_field :public_url, class: "form-control" %>
    </div>

  <%- unless @region_cc.new_record? %>
    <div class="form-group">
      <%= form.label "CC_ID (fedId)" %>
      <%= form.number_field :cc_id, class: "form-control" %>

      <div class="form-group">
        <div><%= form.label :base_url %> z.B. https://6752583286328683258328.club-cloud.de/</div>
        <%= form.text_field :base_url, class: "form-control" %>
      </div>
    </div>
  <%- end %>

  <div class="form-group">
    <%= form.label :context %>
    <%= form.text_field :context, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :region_id %>
    <%= form.number_field :region_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :shortname %>
    <%= form.text_field :shortname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
