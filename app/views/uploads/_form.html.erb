<%= form_with(model: upload) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :filename %>
    <%= form.file_field :filename, class: "form-control" %>
  </div>

<!--  <div class="form-group">-->
    <%#= form.label :position %>
    <%#= form.number_field :position, class: "form-control" %>
<!--  </div>-->

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= custom_link_to t("cancel"), uploads_path, class: "btn btn-white" %>
    <% else %>
      <%= custom_link_to t("cancel"), upload_path(@upload), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
