<%= content_for :title, "Uploads ##{@upload.id}" %>
<%= turbo_stream_from @upload %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= custom_link_to "Uploads", uploads_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Upload #<%= @upload.id %>
    </h1>
    <%= custom_link_to t("edit"), edit_upload_path(@upload), class: "btn btn-white" %>
  </div>

  <div class="p-8  rounded shadow">
    <%= render @upload %>
  </div>
</div>
