<%= form_with(model: party_game) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :party_id %>
    <%= form.number_field :party_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :seqno %>
    <%= form.number_field :seqno, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :player_a_id %>
    <%= form.number_field :player_a_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :player_b_id %>
    <%= form.number_field :player_b_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :tournament_id %>
    <%= form.number_field :tournament_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
