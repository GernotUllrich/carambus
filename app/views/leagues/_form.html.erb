<%= form_with(model: league) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :registration_until %>
    <%= form.text_field :registration_until, class: "form-control", data: { controller: :flatpickr, flatpickr_alt_input: true, flatpickr_alt_format: t("date.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :organizer_type %>
    <%= form.text_field :organizer_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :organizer_id %>
    <%= form.number_field :organizer_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :season_id %>
    <%= form.number_field :season_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ba_id %>
    <%= form.number_field :ba_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ba_id2 %>
    <%= form.number_field :ba_id2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :discipline_id %>
    <%= form.number_field :discipline_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
