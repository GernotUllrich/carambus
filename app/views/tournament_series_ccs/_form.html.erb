<%= form_with(model: tournament_series_cc) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :cc_id %>
    <%= form.number_field :cc_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :branch_cc_id %>
    <%= form.number_field :branch_cc_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :season %>
    <%= form.text_field :season, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :valuation %>
    <%= form.number_field :valuation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :series_valuation %>
    <%= form.number_field :series_valuation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :no_tournaments %>
    <%= form.number_field :no_tournaments, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :point_formula %>
    <%= form.text_field :point_formula, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :min_points %>
    <%= form.number_field :min_points, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :point_fraction %>
    <%= form.number_field :point_fraction, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price_money %>
    <%= form.text_field :price_money, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :currency %>
    <%= form.text_field :currency, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :club_id %>
    <%= form.text_field :club_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :show_jackpot %>
    <%= form.number_field :show_jackpot, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :jackpot %>
    <%= form.text_field :jackpot, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
