<%= form_with(model: game_plan) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :footprint %>
    <%= form.text_field :footprint, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= custom_link_to t("cancel"), game_plans_path, class: "btn btn-white" %>
    <% else %>
      <%= custom_link_to t("cancel"), game_plan_path(@game_plan), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
