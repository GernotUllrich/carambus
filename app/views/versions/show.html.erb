<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= custom_link_to 'Versions', versions_path %> > Version #<%= @version.id %></h1>
      <%= button_to( 'Edit', edit_version_path(@version), method: :get, disabled: !current_user&.admin?, class: "btn btn-link") %>
    </div>

    <div class=" rounded shadow p-8">
            <div class="mb-4">
        <h5>Item type</h5>
        <%= @version.item_type %>
      </div>
            <div class="mb-4">
        <h5>Item</h5>
        <%= @version.item_id %>
      </div>
            <div class="mb-4">
        <h5>Event</h5>
        <%= @version.event %>
      </div>
            <div class="mb-4">
        <h5>Whodunnit</h5>
        <%= @version.whodunnit %>
      </div>
            <div class="mb-4">
        <h5>Object</h5>
        <%= @version.object %>
      </div>
            <div class="mb-4">
        <h5>Object changes</h5>
        <%= @version.object_changes %>
      </div>
          </div>
  </div>
</div>
