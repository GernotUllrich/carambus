<%= form_with(model: version) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :item_type %>
    <%= form.text_field :item_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :item_id %>
    <%= form.text_field :item_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :event %>
    <%= form.text_field :event, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :whodunnit %>
    <%= form.text_field :whodunnit, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :object %>
    <%= form.text_area :object, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :object_changes %>
    <%= form.text_area :object_changes, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
