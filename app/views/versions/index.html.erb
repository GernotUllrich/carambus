<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Versions</h1>

    <% if @versions.any? %>
      <%= button_to 'New Version', new_version_path, method: :get, disabled: !current_user&.admin?, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @versions.any? %>
    <div class=" rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @versions, :item_type,'Item type', request.params, class: 'text-gray-700 dark:text-gray-300' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @versions, :item_id,'Item', request.params, class: 'text-gray-700 dark:text-gray-300' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @versions, :event,'Event', request.params, class: 'text-gray-700 dark:text-gray-300' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @versions, :whodunnit,'Whodunnit', request.params, class: 'text-gray-700 dark:text-gray-300' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @versions, :object,'Object', request.params, class: 'text-gray-700 dark:text-gray-300' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @versions, :object_changes,'Object changes', request.params, class: 'text-gray-700 dark:text-gray-300' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 dark:text-gray-300 w-20"><%= t('actions') %></th>
          </tr>
        </thead>

        <tbody>
        <% @versions.each do |version| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                      <td class="p-3"><%= version.item_type %></td>
                      <td class="p-3"><%= version.item_id %></td>
                      <td class="p-3"><%= version.event %></td>
                      <td class="p-3"><%= version.whodunnit %></td>
                      <td class="p-3"><%= version.object %></td>
                      <td class="p-3"><%= version.object_changes %></td>

            <td>
              <%= custom_link_to t('view'), version, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%- request.set_header("action_dispatch.request.query_parameters", request.headers["action_dispatch.request.query_parameters"].reject{|k,v| k == "table_only"})%>
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class=" rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
            <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 13.5h3.86a2.25 2.25 0 0 1 2.012 1.244l.256.512a2.25 2.25 0 0 0 2.013 1.244h3.218a2.25 2.25 0 0 0 2.013-1.244l.256-.512a2.25 2.25 0 0 1 2.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 0 0-2.15-1.588H6.911a2.25 2.25 0 0 0-2.15 1.588L2.35 13.177a2.25 2.25 0 0 0-.1.661Z" />
      </svg>
      <div class="flex-1 text-center">

        <%= button_to 'New Version', new_version_path, disabled: !current_user&.admin?, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
