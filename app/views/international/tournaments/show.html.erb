<div class="container mx-auto px-4 py-8">
  <!-- Breadcrumb -->
  <nav class="mb-6 text-sm">
    <%= link_to 'International', international_path, class: 'text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300' %>
    <span class="mx-2 text-gray-400">/</span>
    <%= link_to 'Tournaments', international_tournaments_path, class: 'text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300' %>
    <span class="mx-2 text-gray-400">/</span>
    <span class="text-gray-600 dark:text-gray-400"><%= @tournament.name %></span>
  </nav>

  <!-- Tournament Header -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 mb-8">
    <div class="flex items-start justify-between mb-6">
      <div class="flex-1">
        <div class="mb-3 flex items-center gap-2">
          <span class="inline-block px-4 py-2 text-sm font-semibold <%= tournament_type_badge_class(@tournament.tournament_type) %> rounded-full">
            <%= @tournament.tournament_type&.humanize || 'Tournament' %>
          </span>
          <% if @tournament.official_umb? %>
            <span class="inline-flex items-center px-3 py-1.5 text-sm font-semibold bg-blue-100 dark:bg-blue-900/40 text-blue-800 dark:text-blue-200 rounded-full">
              <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Official UMB Data
            </span>
          <% end %>
        </div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4"><%= @tournament.name %></h1>
      </div>
    </div>

    <!-- Tournament Info Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Discipline -->
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Discipline</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900 dark:text-gray-100"><%= @tournament.discipline.translated_name(:en) %></dd>
        </div>
      </div>

      <!-- Dates -->
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Date</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900 dark:text-gray-100"><%= @tournament.date_range %></dd>
        </div>
      </div>

      <!-- Location -->
      <% if @tournament.location.present? %>
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Location</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900 dark:text-gray-100"><%= @tournament.location %></dd>
          </div>
        </div>
      <% end %>

      <!-- Videos Count -->
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zm12.553 1.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
          </svg>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Videos</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900 dark:text-gray-100"><%= @videos.count %></dd>
        </div>
      </div>
    </div>

    <!-- Source URL -->
    <% if @tournament.source_url.present? %>
      <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
        <%= link_to @tournament.source_url,
            target: '_blank',
            rel: 'noopener noreferrer',
            class: 'inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-semibold' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          Official Website
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Tournament Videos -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Tournament Videos</h2>

    <% if @videos.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @videos.each do |video| %>
          <a href="<%= international_video_path(video) %>"
             class="block bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden">
            <!-- Thumbnail -->
            <% if video.thumbnail_url.present? %>
              <div class="relative pb-[56.25%]">
                <%= image_tag video.thumbnail_url, class: 'absolute inset-0 w-full h-full object-cover', alt: video.title %>

                <!-- Duration Badge -->
                <% if video.duration.present? %>
                  <span class="absolute bottom-2 right-2 bg-black bg-opacity-75 text-white text-xs px-2 py-1 rounded">
                    <%= video.duration_formatted %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <!-- Video Info -->
            <div class="p-4">
              <h3 class="text-sm font-semibold text-gray-900 mb-2 line-clamp-2" title="<%= video.title %>">
                <%= video.translated_title(:en) %>
              </h3>

              <div class="text-xs text-gray-600 space-y-1">
                <p><%= video.international_source.name %></p>
                <% if video.published_at.present? %>
                  <p><%= time_ago_in_words(video.published_at) %> ago</p>
                <% end %>
              </div>

              <!-- Metadata Pills -->
              <% if video.data['players'].present? %>
                <div class="mt-2">
                  <span class="inline-block px-2 py-0.5 text-xs font-semibold text-purple-800 bg-purple-100 rounded">
                    <%= video.data['players'].join(' vs ') %>
                  </span>
                </div>
              <% end %>
            </div>
          </a>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600 italic">No videos available for this tournament yet.</p>
    <% end %>
  </section>

  <!-- Rankings Section -->
  <% if @all_participations.any? %>
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Ranglisten</h2>

      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Gesamtrangliste</h3>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rang</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Land</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Punkte</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Aufn.</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">GD</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">HS</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @all_participations.each_with_index do |participation, index| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= index + 1 %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= participation.player&.fl_name || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <%= participation.player&.nationality || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-mono">
                    <%= participation.result || 0 %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 text-right font-mono">
                    <%= participation.innings || 0 %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 text-right font-mono">
                    <%= participation.gd ? number_with_precision(participation.gd, precision: 2) : '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 text-right font-mono">
                    <%= participation.hs || '-' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Games Section -->
  <% if @phase_games.any? %>
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Spiele</h2>

      <div class="space-y-6">
        <% @phase_games.each do |phase_game| %>
          <%
            phase_matches = @matches_by_phase[phase_game.id] || []
            next if phase_matches.empty?
            matches_by_group = phase_matches.group_by { |g| g.data['group'] || g.group_no || 'A' }
          %>

          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <!-- Phase Header -->
            <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-blue-700">
              <h3 class="text-lg font-bold text-white"><%= phase_game.display_gname_lines.join(" - ") %></h3>
            </div>

            <% matches_by_group.sort_by { |group, _| group.to_s }.each do |group, matches| %>
              <!-- Group Section -->
              <div class="border-b border-gray-200 last:border-b-0">
                <div class="px-6 py-3 bg-gray-50">
                  <h4 class="font-semibold text-gray-700">Gruppe <%= group %></h4>
                </div>

                <div class="overflow-x-auto">
                  <table class="min-w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                      <tr>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Partie</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Heim</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Gast</th>
                        <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">Punkte</th>
                        <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">Aufn.</th>
                        <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">HS</th>
                        <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">Durchschnitt</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                      <% matches.sort_by { |m| m.data['umb_match_number'] || 0 }.each do |match| %>
                        <%
                          participations = match.game_participations.includes(:player).to_a
                          home = participations[0]
                          away = participations[1]
                        %>
                        <tr class="hover:bg-gray-50">
                          <td class="px-4 py-3 text-sm text-gray-900">
                            <%= match.data['umb_match_number'] %>
                          </td>
                          <td class="px-4 py-3 text-sm <%= 'font-bold text-green-600' if home && away && home.result > away.result %>">
                            <%= home&.player&.fl_name || '-' %>
                          </td>
                          <td class="px-4 py-3 text-sm <%= 'font-bold text-green-600' if home && away && away.result > home.result %>">
                            <%= away&.player&.fl_name || '-' %>
                          </td>
                          <td class="px-4 py-3 text-sm text-center font-mono">
                            <% if home && away %>
                              <%= home.result %>:<%= away.result %>
                            <% else %>
                              -
                            <% end %>
                          </td>
                          <td class="px-4 py-3 text-sm text-center font-mono">
                            <% if home && away %>
                              <%= home.innings %>/<%= away.innings %>
                            <% else %>
                              -
                            <% end %>
                          </td>
                          <td class="px-4 py-3 text-sm text-center font-mono">
                            <% if home && away %>
                              <%= home.hs %>/<%= away.hs %>
                            <% else %>
                              -
                            <% end %>
                          </td>
                          <td class="px-4 py-3 text-sm text-center font-mono">
                            <% if home && away && home.gd && away.gd %>
                              <%= number_with_precision(home.gd, precision: 2) %>/<%= number_with_precision(away.gd, precision: 2) %>
                            <% else %>
                              -
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

</div>
