<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">International Tournaments</h1>
    <p class="text-xl text-gray-600">Browse carom billiards tournaments from around the world</p>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <%= form_with url: international_tournaments_path, method: :get, class: 'space-y-4' do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Tournament Type Filter -->
        <div>
          <%= f.label :type, 'Type', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.select :type,
              options_for_select(@tournament_types.map { |t| [t.humanize, t] }, params[:type]),
              { include_blank: 'All Types' },
              class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500' %>
        </div>

        <!-- Discipline Filter -->
        <div>
          <%= f.label :discipline_id, 'Discipline', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.select :discipline_id,
              options_from_collection_for_select(@disciplines, :id, :name, params[:discipline_id]),
              { include_blank: 'All Disciplines' },
              class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500' %>
        </div>

        <!-- Year Filter -->
        <div>
          <%= f.label :year, 'Year', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.select :year,
              options_for_select((2014..2026).to_a.reverse, params[:year]),
              { include_blank: 'All Years' },
              class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500' %>
        </div>

        <!-- Submit Button -->
        <div class="flex items-end">
          <%= f.submit 'Apply Filters', class: 'w-full px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors' %>
        </div>
      </div>

      <!-- Official UMB Filter Checkbox -->
      <div class="flex items-center pt-2">
        <label class="flex items-center cursor-pointer">
          <%= f.check_box :official_umb, 
              { checked: params[:official_umb] == '1' },
              '1', '0',
              class: 'w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500' %>
          <span class="ml-2 text-sm font-medium text-gray-700">
            Show only official UMB tournaments
            <span class="ml-1 px-2 py-0.5 text-xs font-semibold text-blue-800 bg-blue-100 rounded">Official</span>
          </span>
        </label>
      </div>
    <% end %>
  </div>

  <!-- Tournament Grid -->
  <% if @tournaments.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <% @tournaments.each do |tournament| %>
        <a href="<%= international_tournament_path(tournament) %>" 
           class="block bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow p-6">
          <!-- Tournament Type Badge -->
          <div class="mb-4">
            <span class="inline-block px-3 py-1 text-sm font-semibold <%= tournament_type_badge_class(tournament.tournament_type) %> rounded-full">
              <%= tournament.tournament_type&.humanize || 'Tournament' %>
            </span>
          </div>

          <!-- Tournament Name -->
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            <%= tournament.name %>
            <% if tournament.official_umb? %>
              <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Official UMB
              </span>
            <% end %>
          </h3>

          <!-- Details -->
          <div class="text-gray-600 space-y-2">
            <!-- Discipline -->
            <p class="flex items-center">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              <span><%= tournament.discipline.translated_name(:en) %></span>
            </p>

            <!-- Dates -->
            <p class="flex items-center">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <span><%= tournament.date_range %></span>
            </p>

            <!-- Location -->
            <% if tournament.location.present? %>
              <p class="flex items-center">
                <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <span><%= tournament.location %></span>
              </p>
            <% end %>

            <!-- Videos Count -->
            <p class="flex items-center text-blue-600 font-semibold">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zm12.553 1.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
              </svg>
              <span><%= tournament.international_videos.count %> videos</span>
            </p>
          </div>
        </a>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No tournaments found</h3>
      <p class="mt-1 text-sm text-gray-500">Try adjusting your filter criteria.</p>
    </div>
  <% end %>
</div>
