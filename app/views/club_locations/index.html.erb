<%= content_for :title, "Club Locations" %>
<%= turbo_stream_from :club_locations %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Club Locations</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500"><%= I18n.t("sort_by", :default => "Sort By:") %></span>
        <%= sortable @club_locations, :club_id,"Club", request.params, class: "text-gray-700 mr-1" %>
        <%= sortable @club_locations, :location_id,"Location", request.params, class: "text-gray-700 mr-1" %>
        <%= sortable @club_locations, :status,"Status", request.params, class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= custom_link_to t("shared.scaffold.new.title", default: "Club Location", model: "Club Location"), new_club_location_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("club_locations" if first_page?), class: " rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "club_locations/index", collection: @club_locations, as: :club_location, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Club Location</p>
        <%= custom_link_to t("shared.scaffold.new.title", default: "New Club Location", model: "Club Location"), new_club_location_path, disabled: !current_user&.admin?, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
