<%= form_with(model: game_participation) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :game_id %>
    <%= form.number_field :game_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :player_id %>
    <%= form.number_field :player_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.text_field :role, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :points %>
    <%= form.number_field :points, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :result %>
    <%= form.number_field :result, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :innings %>
    <%= form.number_field :innings, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gd %>
    <%= form.text_field :gd, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hs %>
    <%= form.number_field :hs, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gname %>
    <%= form.text_field :gname, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
