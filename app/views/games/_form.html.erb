<%= form_with(model: game) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :tournament_id %>
    <%= form.number_field :tournament_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :roles %>
    <%= form.text_area :roles, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :seqno %>
    <%= form.number_field :seqno, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gname %>
    <%= form.text_field :gname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :group_no %>
    <%= form.number_field :group_no, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :table_no %>
    <%= form.number_field :table_no, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :round_no %>
    <%= form.number_field :round_no, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :started_at %>
    <%= form.text_field :started_at, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :ended_at %>
    <%= form.text_field :ended_at, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
