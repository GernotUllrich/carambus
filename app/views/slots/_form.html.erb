<%= form_with(model: slot) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :dayofweek %>
    <%= form.number_field :dayofweek, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hourofday_start %>
    <%= form.number_field :hourofday_start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :minuteofhour_start %>
    <%= form.number_field :minuteofhour_start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hourofday_end %>
    <%= form.number_field :hourofday_end, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :minuteofhour_end %>
    <%= form.number_field :minuteofhour_end, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :next_start %>
    <%= form.datetime_field :next_start, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :next_end %>
    <%= form.datetime_field :next_end, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :table_id %>
    <%= form.number_field :table_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :recurring %>
    <%= form.check_box :recurring, class: "form-checkbox" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= custom_link_to t("cancel"), slots_path, class: "btn btn-white" %>
    <% else %>
      <%= custom_link_to t("cancel"), slot_path(@slot), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
