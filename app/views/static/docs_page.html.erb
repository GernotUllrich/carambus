<%# View für integrierte MkDocs-Dokumentation im Carambus-Layout %>

<% content_for :title, @page_title %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        <%= @page_title %>
      </h1>
      
      <!-- External MkDocs Link -->
      <div class="flex items-center">
        <%= link_to "https://gernotullrich.github.io/carambus/#{params[:path]}/", target: "_blank", class: "inline-flex items-center px-3 py-1 text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          <%= t('common.view_in_mkdocs') %>
        <% end %>
      </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="px-6 py-8">
        <!-- Rendered Markdown Content -->
        <div class="prose prose-lg max-w-none dark:prose-invert">
          <%= @rendered_content.html_safe %>
        </div>
      </div>
    </div>

    <!-- Footer Actions -->
    <div class="mt-8 flex justify-between items-center">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        <%= t('common.last_updated') %>: <%= Time.current.strftime("%d.%m.%Y") %>
      </div>
      
      <div class="flex space-x-4">
        <!-- Edit in MkDocs Button -->
        <%= link_to "https://gernotullrich.github.io/carambus/#{params[:path]}/", target: "_blank", class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <%= t('common.edit_in_mkdocs') %>
        <% end %>
        
        <!-- Back to Documentation -->
        <%= link_to "https://gernotullrich.github.io/carambus/", target: "_blank", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <%= t('common.back_to_documentation') %>
        <% end %>
      </div>
    </div>

    <!-- Beispiel für verwandte Dokumentation -->
    <div class="mt-8 p-6 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
        <%= t('common.related_documentation') %>
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-2">
          <h4 class="font-medium text-gray-700 dark:text-gray-300">Deutsche Dokumentation</h4>
          <ul class="space-y-1 text-sm">
            <li><%= docs_page_link('tournament', locale: 'de', text: 'Turnierverwaltung') %></li>
            <li><%= docs_page_link('league', locale: 'de', text: 'Ligaspieltage') %></li>
            <li><%= docs_page_link('scoreboard_autostart_setup', locale: 'de', text: 'Scoreboard Setup') %></li>
          </ul>
        </div>
        <div class="space-y-2">
          <h4 class="font-medium text-gray-700 dark:text-gray-300">English Documentation</h4>
          <ul class="space-y-1 text-sm">
            <li><%= docs_page_link('tournament', locale: 'en', text: 'Tournament Management') %></li>
            <li><%= docs_page_link('league', locale: 'en', text: 'League Match Days') %></li>
            <li><%= docs_page_link('scoreboard_autostart_setup', locale: 'en', text: 'Scoreboard Setup') %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div> 