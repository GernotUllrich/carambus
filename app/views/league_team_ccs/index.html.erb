<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">League Team Ccs</h1>

    <% if @league_team_ccs.any? %>
      <div class="flex-row w-2/4">
        <div class="flex flex-row">
          <div class="flex w-full">
            <form action="/league_team_ccs" method="get" target="table_wrapper" data-reflex-serialize-form="true">
              <%= search_field_tag :search, params[:search], id: 'search', data: { reflex: "input->SearchReflex#perform", reflex_permanent: "search" } %>
            </form>
          </div>
          <div class="flex pl-3">
            <%= render_svg "icons/information-outline", styles: "fill-current icon-sm text-gray-700 dark:text-gray-800 hover:text-gray-800 hover: dark: inline-blocktable_monitor.save" %>
          </div>
        </div>
      </div>
      <%= button_to 'New League Team Cc', new_league_team_cc_path, disabled: !current_user&.admin?, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @league_team_ccs.any? %>
    <div id="table_wrapper">
      <%= render partial: 'league_team_ccs_table' %>
    </div>

  <% else %>
    <div class=" rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first League Team Cc</p>
        <%= button_to 'New League Team Cc', new_league_team_cc_path, method: :get, disabled: !current_user&.admin?, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
