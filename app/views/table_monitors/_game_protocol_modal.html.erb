<%# Game Protocol Modal - Shows complete innings history with edit capability %>
<div id="game-protocol-modal" 
     class="modal hidden fixed inset-0 z-50 flex items-center justify-center"
     data-game-protocol-target="modal">
  
  <!-- Backdrop -->
  <div class="modal-backdrop absolute inset-0 bg-black bg-opacity-70"
       data-action="click->game-protocol#close"></div>
  
  <!-- Modal Content -->
  <div class="modal-content relative bg-white dark:bg-gray-900 rounded-lg shadow-2xl max-w-6xl w-11/12 max-h-[90vh] flex flex-col">
    
    <!-- Header -->
    <div class="modal-header flex justify-between items-center p-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Spielprotokoll</h2>
      <button class="close-button text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 text-3xl leading-none"
              data-action="click->game-protocol#close">
        ‚úï
      </button>
    </div>
    
    <!-- Warning Banner (hidden by default, shown in edit mode) -->
    <div class="warning-banner hidden bg-yellow-100 dark:bg-yellow-900 border-b border-yellow-300 dark:border-yellow-700 p-3"
         data-game-protocol-target="warningBanner">
      <div class="flex items-center gap-2 text-yellow-800 dark:text-yellow-200">
        <span class="text-xl">‚ö†Ô∏è</span>
        <span class="font-semibold">Bearbeitungsmodus ‚Äì √Ñnderungen werden sofort auf dem Server gespeichert</span>
      </div>
    </div>
    
    <!-- Player Info -->
    <div class="game-info bg-gray-50 dark:bg-gray-800 p-4 border-b border-gray-200 dark:border-gray-700">
      <div class="grid grid-cols-2 gap-4 text-center">
        <div>
          <span class="font-semibold text-gray-700 dark:text-gray-300">Spieler A:</span>
          <span class="text-lg ml-2 text-gray-900 dark:text-gray-100" id="player-a-name"></span>
        </div>
        <div>
          <span class="font-semibold text-gray-700 dark:text-gray-300">Spieler B:</span>
          <span class="text-lg ml-2 text-gray-900 dark:text-gray-100" id="player-b-name"></span>
        </div>
      </div>
      <div class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
        <span id="discipline-info"></span>
        <span class="mx-2">‚Ä¢</span>
        <span id="goal-info"></span>
      </div>
    </div>
    
    <!-- Table Container (scrollable) -->
    <div class="protocol-table-container flex-1 overflow-y-auto p-4">
      <table class="protocol-table w-full border-collapse">
        <thead class="sticky top-0 bg-gray-100 dark:bg-gray-800 border-b-2 border-gray-300 dark:border-gray-600">
          <tr>
            <th class="py-3 px-2 text-center text-sm font-semibold text-gray-700 dark:text-gray-300 bg-gray-200 dark:bg-gray-700">#</th>
            <th colspan="2" class="py-3 px-4 text-center text-sm font-semibold text-blue-700 dark:text-blue-300 bg-blue-100 dark:bg-blue-900 dark:bg-opacity-30">Spieler A</th>
            <th colspan="2" class="py-3 px-4 text-center text-sm font-semibold text-green-700 dark:text-green-300 bg-green-100 dark:bg-green-900 dark:bg-opacity-30">Spieler B</th>
            <th class="py-3 px-2 text-center text-sm font-semibold text-gray-700 dark:text-gray-300"></th>
          </tr>
          <tr>
            <th class="py-2 px-2 text-center text-xs text-gray-600 dark:text-gray-400 bg-gray-200 dark:bg-gray-700">Aufn.</th>
            <th class="py-2 px-4 text-center text-xs text-gray-600 dark:text-gray-400 bg-blue-50 dark:bg-blue-900 dark:bg-opacity-20">Punkte</th>
            <th class="py-2 px-4 text-center text-xs text-gray-600 dark:text-gray-400 bg-blue-50 dark:bg-blue-900 dark:bg-opacity-20">Total</th>
            <th class="py-2 px-4 text-center text-xs text-gray-600 dark:text-gray-400 bg-green-50 dark:bg-green-900 dark:bg-opacity-20">Punkte</th>
            <th class="py-2 px-4 text-center text-xs text-gray-600 dark:text-gray-400 bg-green-50 dark:bg-green-900 dark:bg-opacity-20">Total</th>
            <th class="py-2 px-2 text-center text-xs text-gray-600 dark:text-gray-400"></th>
          </tr>
        </thead>
        <tbody data-game-protocol-target="tbody" class="text-gray-900 dark:text-gray-100" id="protocol-tbody">
          <!-- Rows are server-rendered and morphed by GameProtocolReflex -->
          <!-- Initial render will be done by Stimulus controller, then Reflex takes over -->
        </tbody>
      </table>
    </div>
    
    <!-- Actions Footer -->
    <div class="modal-actions flex gap-3 p-4 border-t border-gray-200 dark:border-gray-700 justify-end">
      
      <!-- View Mode Actions -->
      <div data-game-protocol-target="viewActions" class="flex gap-3">
        <button class="btn btn-primary px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold transition"
                data-action="click->game-protocol#edit">
          Bearbeiten
        </button>
        <button class="btn btn-secondary px-6 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg font-semibold transition"
                data-action="click->game-protocol#close">
          Fertig
        </button>
        <button class="btn btn-secondary px-6 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg font-semibold transition print:hidden"
                data-action="click->game-protocol#print">
          üìÑ Drucken
        </button>
      </div>
      
      <!-- Edit Mode Actions (hidden by default) -->
      <div data-game-protocol-target="editActions" class="hidden flex gap-3">
        <button class="btn btn-danger px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition"
                data-action="click->game-protocol#cancelEdit"
                data-game-protocol-target="cancelButton">
          Schlie√üen
        </button>
      </div>
      
    </div>
    
  </div>
</div>

<!-- Print-specific styles -->
<style>
  @media print {
    .modal-backdrop,
    .modal-actions,
    .close-button,
    .warning-banner {
      display: none !important;
    }
    
    #game-protocol-modal {
      position: static;
      background: white;
    }
    
    .modal-content {
      max-width: 100%;
      max-height: 100%;
      box-shadow: none;
      border: 1px solid #000;
    }
    
    .protocol-table {
      page-break-inside: avoid;
    }
    
    .protocol-table th,
    .protocol-table td {
      border: 1px solid #000;
      padding: 8px;
    }
    
    body {
      background: white;
    }
  }
</style>

