            <%= "Halt" %>
          <%- end %>
        <%- else %>
          <%= content_tag "div", class: "flex flex-1 h-full items-center justify-center text-2vw text-center btn btn-primary", data: { turbo: false, reflex: "click->TableMonitorReflex#play_warm_up_b", id: table_monitor.id } do %>
            <%= "Start Einspielzeit" %>
          <%- end %>
        <%- end %>
      </div>
      <div class="dark:text-gray-200 bg-white dark:bg-black bg-gray-50 flex h-2/6 flex-col " id="timer_table_monitor_<%= table_monitor.id %>">
        <div class="flex flex-row items-center justify-center">
          <div class="flex w-4/12"></div>
          <%- arr = time_counter.to_s.split(":") %>
          <%- tc = arr[-1].to_i + 60 * arr[-2].to_i %>
          <div class="flex w-4/12 font-bold text-8vw p-2"><%= tc.to_i == 0 ? "&nbsp;".html_safe : time_counter %></div>
          <div class="flex w-4/12"></div>
        </div>
        <div class="flex flex-row space-x-8">
          <%- showing_timer = (table_monitor.warmup_a? && table_monitor.timer_finish_at.present?) ? "" : "hidden" %>
