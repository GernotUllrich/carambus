                <div class="flex text-6vw font-bold text-red-400"><%= green_bars > 0 ? "I" * (18 - green_bars) : "-----------" %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="flex h-2/3 flex-row mt-0 space-x-8 items-center justify-center">
        <%= content_tag "div", class: "text-2vw h-1/3 focus:outline-none focus:ring-8 focus:ring-green-500 focus:ring-opacity-90 border-0 btn btn-primary", data: { turbo: false, reflex: raw("click->TableMonitorReflex#warm_up_finished"), id: table_monitor.id }, id: "continue", tabindex: 7 do %>
          <%= "Weiter zum AusstoÃŸen" %>
        <%- end %>
      </div>
    </div>
  </div>
  <div class="flex opacity-50 fixed inset-0 z-40 bg-black" id="modal-id-backdrop"></div>
