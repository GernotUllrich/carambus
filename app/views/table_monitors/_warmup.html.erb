            <%= "Halt" %>
          <%- end %>
        <%- else %>
          <%= content_tag "div", class: "flex flex-1 h-full items-center justify-center text-2vw text-center btn btn-primary", data: { turbo: false, reflex: "click->TableMonitorReflex#play_warm_up_a", id: table_monitor.id } do %>
            <%= "Start Einspielzeit" %>
          <%- end %>
        <%- end %>
        <div class="flex flex-1 items-center rounded-full justify-center text-2vw text-center">Einspielzeit
          5
          Min.
        </div>
        <%- if table_monitor.warmup_b? && table_monitor.timer_finish_at.present? %>
