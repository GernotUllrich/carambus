        <div class="mt-4 flex h-1/2 flex-row text-black dark:text-gray-200 space-x-4">
          <div class="flex-1 text-3vw text-center font-semibold"><%= left_player[:fullname] %></div>
          <div class="flex-1 text-3vw text-center font-semibold"><%= right_player[:fullname] %></div>
        </div>
      </div>
      <div class="dark:text-gray-200 bg-white dark:bg-black bg-gray-50 flex h-1/6 flex-row mt-2 space-x-8">
        <%- if table_monitor.warmup_a? && table_monitor.timer_finish_at.present? %>
