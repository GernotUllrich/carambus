<div class="container mx-auto my-8 px-4">
  <div class="max-w-6xl mx-auto">
    
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-3xl font-bold">
        Setzliste automatisch erkannt
      </h1>
      <%= link_to '‚Üê Zur√ºck', compare_seedings_tournament_path(@tournament), class: 'btn btn-secondary' %>
    </div>

    <% if @extraction_result[:success] %>
      <!-- Erfolgreiche Extraktion -->
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
        <h3 class="font-semibold text-green-900 mb-2">
          ‚úÖ <%= @extraction_result[:count] %> Spieler automatisch erkannt!
        </h3>
        <p class="text-green-800">
          Die Setzliste wurde aus der Einladung extrahiert.
          Bitte pr√ºfen Sie die erkannten Spieler und best√§tigen Sie die √úbernahme.
        </p>
      </div>

      <!-- Matched Players -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-bold mb-4">
          Erkannte Spieler (<%= @match_result[:match_rate] %>% √úbereinstimmung)
        </h2>

        <%= form_with url: apply_seeding_order_tournament_path(@tournament), method: :post do |f| %>
          <table class="w-full">
            <thead>
              <tr class="bg-gray-100">
                <th class="p-3 text-left">Position</th>
                <th class="p-3 text-left">Erkannter Name</th>
                <th class="p-3 text-left">Zugeordneter Spieler</th>
                <th class="p-3 text-left">Status</th>
              </tr>
            </thead>
            <tbody>
              <% @match_result[:matched].each do |match| %>
                <tr class="border-b">
                  <td class="p-3 font-bold"><%= match[:position] %></td>
                  <td class="p-3"><%= match[:extracted_name] %></td>
                  <td class="p-3">
                    <%= match[:player].fullname %>
                    <%= hidden_field_tag 'seeding_order[]', match[:player].id %>
                  </td>
                  <td class="p-3">
                    <% if match[:confidence] == :high %>
                      <span class="text-green-600 font-semibold">‚úì Sicher</span>
                    <% else %>
                      <span class="text-yellow-600 font-semibold">‚ö†Ô∏è Vermutung</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <% if @match_result[:unmatched].any? %>
            <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded">
              <h4 class="font-semibold text-yellow-900 mb-2">
                ‚ö†Ô∏è Nicht zugeordnet (<%= @match_result[:unmatched].count %>):
              </h4>
              <ul class="list-disc list-inside text-yellow-800">
                <% @match_result[:unmatched].each do |um| %>
                  <li><%= um[:full_name] %> (Position <%= um[:position] %>)</li>
                <% end %>
              </ul>
              <p class="text-sm text-yellow-700 mt-2">
                Diese Spieler sind nicht in der Meldeliste. Bitte f√ºgen Sie sie manuell hinzu.
              </p>
            </div>
          <% end %>

          <div class="flex justify-between items-center mt-6">
            <%= link_to 'Abbrechen', compare_seedings_tournament_path(@tournament), 
                class: 'btn btn-secondary' %>
            <%= f.submit 'Setzliste √ºbernehmen', 
                class: 'btn btn-success btn-lg',
                data: { confirm: "Setzliste mit #{@match_result[:matched].count} Spielern √ºbernehmen?" } %>
          </div>
        <% end %>
      </div>

      <!-- Raw Text Preview (f√ºr Debugging) -->
      <details class="bg-gray-50 rounded-lg p-4">
        <summary class="cursor-pointer font-semibold text-gray-700">
          üîç Extrahierter Text anzeigen (Debugging)
        </summary>
        <pre class="mt-4 p-4 bg-white border rounded text-xs overflow-auto max-h-96"><%= @extraction_result[:raw_text] %></pre>
      </details>

    <% else %>
      <!-- Fehler bei Extraktion -->
      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <h3 class="font-semibold text-red-900 mb-2">
          ‚ùå Automatische Extraktion fehlgeschlagen
        </h3>
        <p class="text-red-800 mb-4">
          <%= @extraction_result[:error] %>
        </p>

        <div class="space-y-3">
          <p class="text-red-700">Alternativen:</p>
          <div class="flex gap-3">
            <%= link_to 'Andere Datei hochladen', compare_seedings_tournament_path(@tournament), 
                class: 'btn btn-primary' %>
            <%= link_to 'Manuell sortieren', tournament_path(@tournament), 
                class: 'btn btn-secondary' %>
          </div>
        </div>

        <% if @extraction_result[:raw_text].present? %>
          <details class="mt-4">
            <summary class="cursor-pointer text-red-700">Extrahierter Text anzeigen</summary>
            <pre class="mt-2 p-4 bg-white border rounded text-xs overflow-auto max-h-96"><%= @extraction_result[:raw_text] %></pre>
          </details>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

