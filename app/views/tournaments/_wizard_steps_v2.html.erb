<!-- Tournament Wizard Steps UI - Version 2 mit neuer Reihenfolge -->

<!-- Wizard Header mit Progress -->
<div class="wizard-header">
  <h2 class="wizard-title">
    <span class="tournament-icon">üéØ</span>
    Turnier-Setup: <%= tournament.title %>
  </h2>
  <div class="wizard-progress">
    <div class="progress-text">
      Status: <%= wizard_status_text(tournament) %>
    </div>
    <div class="progress-bar-container">
      <div class="progress-bar" style="width: <%= wizard_progress_percent(tournament) %>%"></div>
    </div>
    <div class="progress-steps">
      Schritt <%= wizard_current_step(tournament) %> von 6
    </div>
  </div>
</div>

<!-- Wizard Steps -->
<div class="wizard-steps">

  <!-- Schritt 1: Meldeliste von ClubCloud laden -->
  <% if tournament.organizer.is_a?(Region) %>
    <div class="wizard-step <%= step_class(wizard_step_status(tournament, 1)) %> wizard-step-optional">
      <div class="wizard-step-header">
        <div class="wizard-step-icon">
          <%= step_icon(wizard_step_status(tournament, 1)) %>
        </div>
        <div class="wizard-step-content">
          <div class="wizard-step-number-title">
            <span class="step-number">1.</span>
            <h4 class="step-title">Meldeliste von ClubCloud laden</h4>
            <% if wizard_step_status(tournament, 1) == :completed %>
              <span class="status-badge badge-success">Geladen</span>
            <% elsif sync_needed?(tournament) %>
              <span class="status-badge badge-warning">Empfohlen</span>
            <% else %>
              <span class="status-badge badge-info">Optional</span>
            <% end %>
          </div>

          <div class="step-info">
            L√§dt die <strong>Meldeliste</strong> (wer hat sich gemeldet) von der ClubCloud
          </div>

          <div class="step-info" style="margin-top: 0.5rem;">
            <%= sync_info_text(tournament) %>
          </div>

          <% if tournament.accredation_end %>
            <div class="step-info" style="margin-top: 0.5rem;">
              üìÖ Meldeschluss: <%= l(tournament.accredation_end, format: :short) %>
            </div>
          <% end %>

          <div class="step-help">
            <details>
              <summary>üí° Was ist die Meldeliste?</summary>
              <p>
                Die <strong>Meldeliste</strong> enth√§lt alle Spieler, die sich f√ºr das Turnier 
                <em>angemeldet</em> haben. Diese Liste kommt von der ClubCloud und wird t√§glich 
                bis zum Meldeschluss aktualisiert.<br><br>
                
                <strong>Nicht verwechseln mit:</strong><br>
                ‚Ä¢ <strong>Setzliste</strong> = Reihenfolge nach Ranking (kommt in Schritt 2)<br>
                ‚Ä¢ <strong>Teilnehmerliste</strong> = Wer tats√§chlich da ist (Schritt 3)
              </p>
            </details>
          </div>
        </div>
      </div>

      <div class="wizard-step-actions">
        <%= button_to 'Jetzt synchronisieren', reload_from_cc_tournament_path(tournament),
            method: :post,
            class: "btn btn-primary #{'btn-pulse' if sync_needed?(tournament)}" %>
        
        <!-- Ergebnisse laden (nach Turnier-Ende) -->
        <% if %w[tournament_started playing_groups playing_finals finals_finished results_published].include?(tournament.state) %>
          <%= button_to 'üìä Ergebnisse von ClubCloud laden', 
              reload_from_cc_tournament_path(tournament, reload_games: true),
              method: :post,
              class: 'btn btn-warning btn-sm ml-2',
              data: { confirm: "‚ö†Ô∏è ACHTUNG: L√§dt Spiele und Ergebnisse von ClubCloud.\n\nLokale √Ñnderungen gehen verloren!\n\nNur verwenden wenn Turnier abgeschlossen und Ergebnisse hochgeladen wurden." },
              title: 'F√ºr Archivierung nach Turnier-Ende' %>
        <% end %>
        
        <% if tournament.source_url.present? %>
          <%= link_to 'üîó ClubCloud √∂ffnen', tournament.source_url,
              target: '_blank',
              class: 'btn btn-secondary btn-sm ml-2',
              rel: 'noopener' %>
        <% end %>
      </div>
      
      <!-- Troubleshooting: Turnier nicht gefunden -->
      <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded">
        <details>
          <summary class="cursor-pointer text-sm font-semibold text-yellow-800">
            ‚ö†Ô∏è Turnier nicht gefunden? Hier klicken f√ºr Hilfe
          </summary>
          <div class="mt-3 text-sm text-yellow-900 space-y-3">
            <div>
              <p class="font-semibold mb-1">Empfohlen: Nur anstehende Turniere aktualisieren</p>
              <%= button_to 'üîÑ Anstehende Turniere laden (n√§chste 30 Tage)', 
                  reload_upcoming_tournaments_region_path(tournament.organizer),
                  method: :post,
                  class: 'btn btn-sm btn-warning',
                  data: { disable_with: 'API scraped...' },
                  params: { days_ahead: 30, tournament_id: tournament.id } %>
              <p class="text-xs text-yellow-700 mt-1">
                ‚è±Ô∏è Schnell (10-30 Sekunden) - Nur Turniere der n√§chsten 30 Tage
              </p>
            </div>
            
            <div class="border-t border-yellow-300 pt-2">
              <p class="font-semibold mb-1">Alternative: Alle Turniere aktualisieren</p>
              <%= button_to 'üîÑ Alle Turniere vom API Server laden', 
                  reload_tournaments_region_path(tournament.organizer),
                  method: :post,
                  class: 'btn btn-sm btn-outline-warning',
                  data: { disable_with: 'API scraped alle... (1-2 Minuten)' },
                  params: { tournament_id: tournament.id } %>
              <p class="text-xs text-yellow-700 mt-1">
                ‚è±Ô∏è Langsamer - Alle Turniere der Region
              </p>
            </div>
          </div>
        </details>
      </div>
    </div>
  <% end %>

  <!-- Schritt 2: Setzliste aus Einladung √ºbernehmen (NEU!) -->
  <div class="wizard-step <%= step_class(wizard_step_status(tournament, 2)) %>">
    <div class="wizard-step-header">
      <div class="wizard-step-icon">
        <%= step_icon(wizard_step_status(tournament, 2)) %>
      </div>
      <div class="wizard-step-content">
        <div class="wizard-step-number-title">
          <span class="step-number"><%= tournament.organizer.is_a?(Region) ? 2 : 1 %>.</span>
          <h4 class="step-title">Setzliste aus Einladung √ºbernehmen</h4>
        </div>

        <% if tournament.data['invitation_filename'].present? %>
          <div class="step-info">
            ‚úì Einladung hochgeladen: <%= tournament.data['invitation_filename'] %>
          </div>
        <% else %>
          <div class="step-info">
            Laden Sie die PDF-Einladung oder Screenshot hoch
          </div>
        <% end %>

        <% if wizard_step_status(tournament, 2) == :active && !tournament.data['invitation_filename'].present? %>
          <div class="step-warning">
            <span class="warning-icon">‚ö†Ô∏è</span>
            Dieser Schritt ist noch offen
          </div>
        <% end %>

        <div class="step-help">
          <details>
            <summary>üí° Was macht dieser Schritt?</summary>
            <p>
              Laden Sie die <strong>offizielle Einladung</strong> vom Landessportwart hoch. 
              Carambus extrahiert automatisch:<br>
              ‚Ä¢ <strong>Setzliste</strong> (Reihenfolge nach Ranking)<br>
              ‚Ä¢ <strong>Vorgaben</strong> bei Vorgabeturnieren (Punktzahlen)<br><br>
              Unterst√ºtzt PDF oder Screenshot (PNG/JPG).<br>
              Zweispaltige Tabellen werden automatisch erkannt.<br><br>
              <strong>Alternative:</strong> Falls keine Einladung vorliegt, k√∂nnen Sie auch direkt mit der 
              Meldeliste von ClubCloud (aus Schritt 1) zu Schritt 3 weitergehen.
            </p>
          </details>
        </div>
      </div>
    </div>

    <div class="wizard-step-actions">
      <% step_2_status = wizard_step_status(tournament, 2) %>
      <%# Z√§hle ClubCloud-Seedings (aus Schritt 1) %>
      <% clubcloud_seedings_count = tournament.seedings.where("seedings.id < #{Seeding::MIN_ID}").count %>
      <%# Zeige Button auch wenn keine ClubCloud-Daten, aber wenn Turnier Seedings hat %>
      <% has_any_seedings = tournament.seedings.any? %>
      <% show_alternative_button = clubcloud_seedings_count > 0 || (has_any_seedings && step_2_status == :active) %>
      
      <% if step_2_status == :active %>
        <%= button_to tournament.data['invitation_filename'].present? ? 'Setzliste pr√ºfen' : 'Einladung hochladen', 
            compare_seedings_tournament_path(tournament),
            method: :get,
            class: "btn btn-primary #{'btn-pulse' if !tournament.data['invitation_filename'].present?}" %>
        
        <%# Zeige alternativen Button wenn Seedings vorhanden sind %>
        <% if show_alternative_button %>
          <div class="mt-3 p-3 bg-gray-50 border border-gray-300 rounded">
            <p class="text-sm text-gray-700 mb-2">
              <strong>Wenn keine Einladung zum Upload vorliegt:</strong>
            </p>
            <% seedings_count = clubcloud_seedings_count > 0 ? clubcloud_seedings_count : tournament.seedings.count %>
            <%= button_to "‚Üí Mit Meldeliste zu Schritt 3 (#{seedings_count} Spieler, nach Rangliste sortiert)", 
                use_clubcloud_as_participants_tournament_path(tournament),
                method: :post,
                class: 'btn btn-outline-primary',
                data: { confirm: "Meldeliste als Teilnehmerliste √ºbernehmen und nach Rangliste sortieren?\n\n#{seedings_count} Spieler werden √ºbernommen und automatisch nach der Carambus-Rangliste f√ºr #{tournament.discipline.name} sortiert." },
                title: '√úbernimmt Meldeliste und sortiert automatisch nach Rangliste' %>
          </div>
        <% end %>
        
      <% elsif step_2_status == :completed %>
        <%= button_to tournament.data['invitation_filename'].present? ? 'Setzliste pr√ºfen' : 'Einladung hochladen', 
            compare_seedings_tournament_path(tournament),
            method: :get,
            class: 'btn btn-secondary btn-sm' %>
        
        <%# Zeige alternativen Button auch bei completed wenn Seedings vorhanden sind %>
        <% if clubcloud_seedings_count > 0 %>
          <div class="mt-2 p-2 bg-gray-50 border border-gray-300 rounded">
            <p class="text-xs text-gray-700 mb-2">
              <strong>Wenn keine Einladung zum Upload vorliegt:</strong>
            </p>
            <%= button_to "‚Üí Mit Meldeliste zu Schritt 3 (#{clubcloud_seedings_count} Spieler, nach Rangliste)", 
                use_clubcloud_as_participants_tournament_path(tournament),
                method: :post,
                class: 'btn btn-outline-secondary btn-sm',
                data: { confirm: "Meldeliste als Teilnehmerliste √ºbernehmen und nach Rangliste sortieren?\n\n#{clubcloud_seedings_count} Spieler werden √ºbernommen und automatisch nach der Carambus-Rangliste sortiert." },
                title: '√úbernimmt Meldeliste und sortiert automatisch nach Rangliste' %>
          </div>
        <% end %>
        
      <% else %>
        <span class="disabled-text">
          Erst verf√ºgbar nach vorherigem Schritt
        </span>
      <% end %>
    </div>
  </div>

  <!-- Schritt 3: Teilnehmerliste bearbeiten (vor Ort!) -->
  <%= render 'wizard_step',
      number: tournament.organizer.is_a?(Region) ? 3 : 2,
      title: "Teilnehmerliste bearbeiten (am Turniertag)",
      status: wizard_step_status(tournament, 3),
      action: {
        text: 'Teilnehmer pr√ºfen',
        path: define_participants_tournament_path(tournament),
        method: :get
      },
      info: seedings_info_text(tournament),
      warning: wizard_step_status(tournament, 3) == :active ? "Dieser Schritt bleibt offen bis zur endg√ºltigen Festschreibung in Schritt 4" : false,
      danger: false,
      help: "Passen Sie die <strong>Teilnehmerliste</strong> direkt am Turniertag an:<br>
             ‚Ä¢ ‚òëÔ∏è Checkboxen: Teilnehmer aktivieren/deaktivieren (No-Shows)<br>
             #{tournament.handicap_tournier ? '‚Ä¢ üéØ <strong>Vorgaben korrigieren</strong> falls n√∂tig (Punktzahlen)<br>' : ''}
             ‚Ä¢ ‚úèÔ∏è √Ñnderungen werden sofort gespeichert<br>
             ‚Ä¢ ‚ûï Kurzfristige Nachmeldungen: Spieler aus Meldeliste aktivieren<br><br>
             <strong>Wichtig:</strong> Dieser Schritt bleibt aktiv bis Sie in Schritt 4 die Liste finalisieren!" %>

  <!-- Schritt 4: Teilnehmerliste finalisieren -->
  <%= render 'wizard_step',
      number: tournament.organizer.is_a?(Region) ? 4 : 3,
      title: "Teilnehmerliste finalisieren",
      status: wizard_step_status(tournament, 4),
      action: {
        text: 'Teilnehmerliste abschlie√üen',
        path: finish_seeding_tournament_path(tournament),
        method: :post,
        confirm: "‚ö†Ô∏è ACHTUNG: Nach diesem Schritt k√∂nnen keine Spieler mehr hinzugef√ºgt oder entfernt werden!\n\nIst die Teilnehmerliste vollst√§ndig und korrekt?",
        class: wizard_step_status(tournament, 4) != :active ? 'opacity-25' : ''
      },
      info: nil,
      warning: false,
      danger: true,
      help: "‚ö†Ô∏è WICHTIG: Diese Aktion ist nicht umkehrbar! Die finale <strong>Teilnehmerliste</strong> 
             wird fest gespeichert und die Gruppeneinteilung wird basierend auf dieser Reihenfolge berechnet." %>

  <!-- Schritt 5: Turniermodus w√§hlen -->
  <%= render 'wizard_step',
      number: tournament.organizer.is_a?(Region) ? 5 : 4,
      title: I18n.t("tournaments.show.finalize_tournament_modus", default: "Turniermodus w√§hlen"),
      status: wizard_step_status(tournament, 5),
      action: {
        text: 'Modus ausw√§hlen',
        path: finalize_modus_tournament_path(tournament),
        method: :get,
        class: wizard_step_status(tournament, 5) != :active ? 'opacity-25' : ''
      },
      info: mode_info_text(tournament),
      warning: false,
      danger: false,
      help: "W√§hlen Sie den Turniermodus (z.B. T07, T10) basierend auf der Anzahl der Teilnehmer. 
             Der Modus bestimmt Gruppenaufteilung und K.O.-Runden." %>

  <!-- Schritt 6: Turnier starten & verwalten -->
  <div class="wizard-step <%= step_class(wizard_step_status(tournament, 6)) %>">
    <div class="wizard-step-header">
      <div class="wizard-step-icon">
        <%= step_icon(wizard_step_status(tournament, 6)) %>
      </div>
      <div class="wizard-step-content">
        <div class="wizard-step-number-title">
          <span class="step-number"><%= tournament.organizer.is_a?(Region) ? 6 : 5 %>.</span>
          <h4 class="step-title">Verwaltung der Turnierspiele</h4>
          <% if tournament.tournament_started %>
            <span class="status-badge badge-success">L√§uft</span>
          <% end %>
        </div>

        <% if wizard_step_status(tournament, 6) == :active && !tournament.tournament_started %>
          <div class="step-warning">
            <span class="warning-icon">‚ö†Ô∏è</span>
            Turnier noch nicht gestartet
          </div>
        <% end %>

        <div class="step-help">
          <details>
            <summary>üí° Was macht dieser Schritt?</summary>
            <p>
              <% if tournament.tournament_started %>
                Das Turnier l√§uft bereits. Verwenden Sie den <strong>Tournament Monitor</strong> um:
                <br>‚Ä¢ Spiele zu starten und zu verwalten
                <br>‚Ä¢ Tische zuzuordnen
                <br>‚Ä¢ Ergebnisse zu kontrollieren
                <br>‚Ä¢ Den Turnierverlauf zu √ºberwachen
              <% else %>
                Startet das Turnier und √∂ffnet den Tournament-Monitor f√ºr die Verwaltung der Spiele und Tischzuordnungen.
              <% end %>
            </p>
          </details>
        </div>
      </div>
    </div>

    <div class="wizard-step-actions">
      <% if tournament.tournament_started && tournament.tournament_monitor.present? %>
        <!-- Prominenter Button wenn Turnier l√§uft -->
        <%= link_to 'üéÆ Tournament Monitor √∂ffnen', 
            tournament_monitor_path(tournament.tournament_monitor),
            class: 'btn btn-success btn-lg',
            style: 'font-weight: bold;' %>
      <% elsif wizard_step_status(tournament, 6) == :active %>
        <!-- Button zum Starten wenn noch nicht gestartet -->
        <%= link_to 'Turnier starten', 
            tournament_monitor_tournament_path(tournament),
            class: 'btn btn-primary btn-pulse' %>
      <% elsif wizard_step_status(tournament, 6) == :completed %>
        <!-- Button auch wenn Schritt abgeschlossen (falls Turnier zur√ºckgesetzt wurde) -->
        <%= link_to 'Turnier starten', 
            tournament_monitor_tournament_path(tournament),
            class: 'btn btn-secondary btn-sm' %>
      <% else %>
        <span class="disabled-text">
          Erst verf√ºgbar nach vorherigem Schritt
        </span>
      <% end %>
    </div>
  </div>

</div>

<!-- Hilfe-Box -->
<div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
  <h4 class="font-semibold text-blue-900 mb-2">üìñ Begriffserkl√§rung</h4>
  <dl class="text-sm text-blue-800 space-y-2">
    <dt class="font-semibold">Meldeliste:</dt>
    <dd class="ml-4">Wer hat sich f√ºr das Turnier <em>angemeldet</em> (aus ClubCloud)</dd>
    
    <dt class="font-semibold">Setzliste:</dt>
    <dd class="ml-4">Offizielle <em>Reihenfolge</em> nach Ranking (aus Einladung vom Landessportwart)</dd>
    
    <dt class="font-semibold">Teilnehmerliste:</dt>
    <dd class="ml-4">Wer ist <em>tats√§chlich da</em> am Turniertag (= Setzliste ¬± √Ñnderungen)</dd>
  </dl>
</div>

