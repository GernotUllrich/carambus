              data: { confirm: "Meldeliste von ClubCloud als Teilnehmerliste Ã¼bernehmen und zu Schritt 3 wechseln?\n\n#{clubcloud_seedings_count} Spieler werden Ã¼bernommen." },
              title: 'Falls keine Einladung vorliegt' %>
        <% end %>
        
      <% else %>
        <span class="disabled-text">
          Erst verfÃ¼gbar nach vorherigem Schritt
        </span>
      <% end %>
    </div>
  </div>

  <!-- Schritt 3: Teilnehmerliste bearbeiten (vor Ort!) -->
  <%= render 'wizard_step',
      number: tournament.organizer.is_a?(Region) ? 3 : 2,
      title: "Teilnehmerliste bearbeiten (am Turniertag)",
