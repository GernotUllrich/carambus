<!-- Scoreboard Message Modal -->
<!-- This modal appears when an admin sends a message to the scoreboard -->
<div id="scoreboard-message-modal" 
     class="hidden fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50"
     data-controller="scoreboard-message"
     data-scoreboard-message-id-value=""
     data-table-monitor-id-value="<%= @table_monitor&.id %>">
  
  <div class="bg-white rounded-lg shadow-2xl max-w-2xl w-full mx-4 p-8 relative">
    <!-- Close button (only visible after 3 seconds to ensure message is read) -->
    <button type="button" 
            class="hidden absolute top-4 right-4 text-gray-400 hover:text-gray-600"
            data-scoreboard-message-target="closeButton"
            data-action="click->scoreboard-message#acknowledge">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Icon -->
    <div class="flex justify-center mb-6">
      <div class="bg-blue-100 rounded-full p-4">
        <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>

    <!-- Title -->
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-4">
      Message from Admin
    </h2>

    <!-- Message Content -->
    <div class="bg-gray-50 rounded-lg p-6 mb-6 border-2 border-blue-200">
      <p class="text-xl text-gray-900 whitespace-pre-wrap text-center leading-relaxed" 
         data-scoreboard-message-target="messageText">
      </p>
    </div>

    <!-- Expiry Info -->
    <div class="text-center text-sm text-gray-500 mb-6">
      <span data-scoreboard-message-target="expiryText"></span>
    </div>

    <!-- Acknowledge Button -->
    <div class="flex justify-center">
      <button type="button"
              class="btn btn-primary text-2xl px-12 py-4 rounded-lg shadow-lg hover:shadow-xl transition-all"
              data-action="click->scoreboard-message#acknowledge"
              data-scoreboard-message-target="acknowledgeButton">
        OK - I understand
      </button>
    </div>

    <!-- Auto-dismiss info -->
    <div class="text-center text-xs text-gray-400 mt-4">
      This message will auto-dismiss in <span data-scoreboard-message-target="countdown"></span>
    </div>
  </div>
</div>
