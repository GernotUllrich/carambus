<div class="flex flex-row items-center">
  <div class="flex w-full relative"
       data-controller="filter-popup">
    <form action="/<%= controller_name %>" method="get" target="table_wrapper" data-reflex-serialize-form="true" class="w-full">
      <div class="flex flex-col w-full">
        <div class="flex items-center">
          <input
            type="search"
            name="sSearch"
            id="sSearch"
            value="<%= @sSearch %>"
            data-controller="stimulus-reflex"
            data-reflex="input->SearchReflex#perform"
            data-reflex-permanent="search"
            placeholder="Search"
            data-action="input->stimulus-reflex#__perform"
            data-filter-popup-target="searchInput"
            class="w-full px-4 py-2 rounded-l-md border border-gray-300 bg-white text-gray-800 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-200 dark:placeholder-gray-400"
          >
          <button
            type="button"
            data-action="click->filter-popup#toggle"
            class="px-3 py-2 ml-2 bg-gray-100 dark:bg-gray-700 border border-l-0 border-gray-300 dark:border-gray-600 rounded-r-md hover:bg-gray-200 dark:hover:bg-gray-600"
            aria-label="Filter options"
          >
            <div
              data-controller="tippy"
              data-tippy-content="<%= t("search_filter") %>"
              data-tippy-delay="0"
              data-tippy-arrow="true"
              data-tippy-size="regular"
              data-tippy-animation="fade">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M4 6h16M4 12h8m-8 6h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="16" cy="12" r="2" fill="currentColor"/>
              </svg>
             </div>
          </button>
        </div>

        <% if @sSearch.present? && @records&.empty? %>
          <div class="mt-2 text-sm text-amber-600 dark:text-amber-400 bg-amber-50 dark:bg-amber-900/20 rounded-md p-2">
            <%= t('.no_results', query: @sSearch) %>
          </div>
        <% end %>
      </div>
    </form>

    <%= render partial: 'shared/filter_popup', locals: { fields: generate_filter_fields(model_class) } %>
  </div>
</div>
