<div class="filter-popup hidden absolute right-0 mt-2 bg-white dark:bg-gray-800 rounded-md shadow-lg z-50 p-4 border border-gray-300 dark:border-gray-600 w-80 md:w-96" data-filter-popup-target="popup">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Filter Options</h3>
    <button type="button" data-action="filter-popup#close" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
      </svg>
    </button>
  </div>

  <form data-filter-popup-target="filterForm" data-action="submit->filter-popup#applyFilters">
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Global Search</label>
      <input type="text"
             name="global"
             class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
             placeholder="Search across all fields...">
    </div>
    <div class="space-y-4 max-h-96 overflow-y-auto">
      <% fields.each do |field| %>
        <div class="filter-field">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            <%= field[:display_name] %>
          </label>

          <% if field[:show_operators] %>
            <div class="flex space-x-2">
              <select name="<%= field[:field_key] %>_operator" class="rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm py-1 px-2">
                <option value="contains">Contains</option>
                <option value="=">=</option>
                <option value=">">></option>
                <option value=">=">>=</option>
                <option value="<"><</option>
                <option value="<="><=</option>
              </select>

              <input
                type="<%= field[:field_type] %>"
                name="<%= field[:field_key] %>"
                class="flex-1 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm py-1 px-3"
                placeholder="<%= field[:display_name] %>"
              >
            </div>
          <% else %>
            <input
              type="<%= field[:field_type] %>"
              name="<%= field[:field_key] %>"
              class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm py-1 px-3"
              placeholder="<%= field[:display_name] %>"
            >
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 flex justify-end space-x-3">
      <button
        type="button"
        data-action="filter-popup#clearFilters"
        class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 text-sm font-medium"
      >
        Clear
      </button>
      <button
        type="submit"
        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm font-medium"
      >
        Apply Filters
      </button>
    </div>
  </form>
</div>
