<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= custom_link_to 'Seedings', seedings_path %> > Seeding #<%= @seeding.id %></h1>
      <%= button_to( 'Edit', edit_seeding_path(@seeding), method: :get, disabled: !current_user&.admin?, class: "btn btn-link") %>
    </div>

    <div class=" rounded shadow p-8">
            <div class="mb-4">
        <h5>Player</h5>
        <%= custom_link_to(@seeding.player.fullname, player_path(@seeding.player)) %>
      </div>
            <div class="mb-4">
        <h5>Tournament</h5>
        <%= custom_link_to(@seeding.tournament.title, tournament_path(@seeding.tournament)).html_safe %>
      </div>
            <div class="mb-4">
        <h5>Ba state</h5>
        <%= @seeding.ba_state %>
      </div>
            <div class="mb-4">
        <h5>Position</h5>
        <%= @seeding.position %>
      </div>
            <div class="mb-4">
        <h5>Data</h5>
        <%= Seeding.result_display(@seeding) %>
      </div>
            <div class="mb-4">
        <h5>State</h5>
        <%= @seeding.state %>
      </div>
            <div class="mb-4">
        <h5>Balls goal</h5>
        <%= @seeding.balls_goal %>
      </div>
            <div class="mb-4">
        <h5>Playing discipline</h5>
        <%= @seeding.playing_discipline_id %>
      </div>
          </div>
  </div>
</div>
