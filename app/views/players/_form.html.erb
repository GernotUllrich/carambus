<%= form_with(model: player) do |form| %>
  <%= render "error_messages", resource: form.object %>


  <%- if player.new_record? && player.club.present? %>
    <div class="form-group">
      <%= form.label :club %>
      <%= player.club.shortname %>
      <%= form.hidden_field :club_id %>
    </div>
  <%- else %>
    <div class="form-group">
      <%= form.label :club_id %>
      <%= form.number_field :club_id, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :ba_id %>
      <%= player.ba_id %>
      <%= form.hidden_field :ba_id %>
    </div>
  <%- end %>

  <div class="form-group">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :firstname %>
    <%= form.text_field :firstname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :guest %>
    <%= form.check_box :guest, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
