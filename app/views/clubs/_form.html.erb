<%= form_with(model: @club) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :ba_id %>
    <%= form.number_field :ba_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :region_id %>
    <%= form.number_field :region_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :synonyms %>
    <%= form.text_field :synonyms, value: @club.synonyms.split("\n").join(";"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :shortname %>
    <%= form.text_field :shortname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :homepage %>
    <%= form.text_field :homepage, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :priceinfo %>
    <%= form.text_area :priceinfo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :logo %>
    <%= form.text_field :logo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :founded %>
    <%= form.text_field :founded, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dbu_entry %>
    <%= form.text_field :dbu_entry, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
