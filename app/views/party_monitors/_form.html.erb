<%= form_with(model: party_monitor) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :party_id %>
    <%= form.number_field :party_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :started_at %>
    <%= form.datetime_field :started_at, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ended_at %>
    <%= form.datetime_field :ended_at, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= custom_link_to t("cancel"), party_monitors_path, class: "btn btn-white" %>
    <% else %>
      <%= custom_link_to t("cancel"), party_monitor_path(@party_monitor), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
