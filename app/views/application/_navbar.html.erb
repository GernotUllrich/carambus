<!-- Navigation -->
<nav class="fixed left-0 top-0 h-full w-64 bg-gray-800 dark:bg-gray-800 shadow-lg transition-all duration-300 transform" data-sidebar-target="nav">
  <div class="p-4">

    <div class="flex items-center justify-between mb-8">
      <%= custom_link_to image_tag('logo.svg', class: 'w-12 mb-2'), root_path %>
      <div class="flex font-bold">Carambus</div>
      <!-- Close button - always visible when nav is open -->
      <button data-action="sidebar#collapse" class="bg-gray-700 hover:bg-gray-600 rounded-lg">
        <%= render_svg "icons/arrow-left-to-line", styles: "w-6 h-6 text-gray-300 dark:text-gray-300" %>
      </button>
    </div>
    <div class="lg:flex-grow">
      <%= render "left_nav" %>
    </div>
    <div>
      <%= render "right_nav" %>
      <% if user_signed_in? %>
        <!-- Mobile menu -->
        <div class="lg:hidden mt-2 pt-4 pb-2 border-t border-gray-200 dark:border-gray-800">
          <div class="flex items-center px-2">
            <%= custom_link_to current_user, class: "grow flex items-center" do %>
              <%#= account_avatar current_account, include_user: true, class: "rounded-full h-8 w-8" %>
              <div class="ml-3 text-base font-medium text-gray-200 dark:text-white"><%= current_user.email %></div>
            <% end %>
          </div>
          <div class="mt-3 space-y-1">
            <%= custom_link_to t(".profile"), edit_user_registration_path, class: 'block p-2 text-base font-medium text-gray-200 hover:text-gray-600 hover:bg-gray-100 dark:text-gray-50 dark:bg-gray-900 dark:hover:bg-primary-800' %>
            <% if current_user&.admin? %>
              <%= custom_link_to t(".admin"), admin_root_path, class: 'block p-2 text-base font-medium text-gray-200 hover:text-gray-600 hover:bg-gray-100 dark:text-gray-50 dark:bg-gray-900 dark:hover:bg-primary-800', data: { turbo: false } %>
            <% end %>
            <%= button_to t(".sign_out"), destroy_user_session_path, method: :delete, class: 'w-full text-left block p-2 text-base font-medium text-gray-200 hover:text-gray-600 hover:bg-gray-100 dark:text-gray-50 dark:bg-gray-900 dark:hover:bg-primary-800' %>
          </div>
        </div>
        <!-- Main menu -->
        <div class="hidden lg:inline-flex z-10 items-center leading-none no-underline align-middle rounded text-gray-700 dark:text-gray-50 dark:hover:text-gray-200">
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" class="inline-block select-none p-2 rounded hover:bg-gray-700" aria-label="Profile Menu">
              <span class="flex items-center gap-1 text-gray-100 dark:text-gray-100 appearance-none">
                <%= image_tag gravatar_url_for(current_user.email, size: 30), class: "rounded-full" %>
                <!--                <span class="max-w-32 truncate leading-tight"><%#= current_user.email %></span>-->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current flex-shrink-0 w-4 h-4"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
              </span>
            </button>
            <div data-dropdown-target="menu"
                 data-transition-enter="transition ease-out duration-200"
                 data-transition-enter-from="opacity-0 translate-y-1"
                 data-transition-enter-to="opacity-100 translate-y-0"
                 data-transition-leave="transition ease-in duration-150"
                 data-transition-leave-from="opacity-100 translate-y-0"
                 data-transition-leave-to="opacity-0 translate-y-1"
                 class="z-20 hidden mt-2 lg:absolute lg:right-0 dropdown-menu">
              <div class="overflow-hidden  bg-white dark:bg-gray-900 border border-green-400 gray-200 dark:border-green-400 rounded shadow-md">
                <%= custom_link_to t(".profile"), edit_user_registration_path, class: 'text-gray-800  hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3' %>
                <% if current_user&.admin? %>
                  <div class="px-6 py-3 text-xs font-bold text-gray-800 uppercase  dark:text-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700"><%= t(".admin") %></div>
                  <%= custom_link_to t(".dashboard"), admin_root_path, class: 'text-gray-800  hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } %>
                  <%= custom_link_to 'Sidekiq', admin_sidekiq_web_path, class: 'text-gray-800  hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap no-underline block px-6 py-3', target: :_blank, data: { turbo: false } if defined?(::Sidekiq) %>
                <% end %>
                <%= button_to t(".sign_out"), destroy_user_session_path, method: :delete, class: 'w-full text-left font-medium cursor-pointer px-6 py-3 border-t border-gray-200 dark:border-gray-700 text-gray-800  hover:bg-primary-50 dark:text-gray-50 dark:bg-gray-800 dark:hover:bg-primary-800 transition ease-in-out duration-200 whitespace-nowrap' %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <%= custom_link_to t(".log_in"), new_user_session_path, class: 'nav-link' %>
        <%= custom_link_to t(".sign_up"), new_user_registration_path, class: 'btn btn-primary' %>
      <% end %>
    </div>

  </div>
</nav>

<!-- Hamburger Menu Button -->
<button data-action="sidebar#collapse"
        class="fixed top-4 left-4 z-50 p-2 bg-gray-700 text-gray-300 hover:bg-gray-600 rounded-lg transition-all duration-300 shadow-lg opacity-0 pointer-events-none"
        data-sidebar-target="showButton">
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
  </svg>
</button>
