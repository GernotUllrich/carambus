<div class="container mx-auto p-4">
  <div class="my-8">
    <h1><%= t(".title") %></h1>

    <p class="mb-2">This is the homepage for logged in users.</p>
    <p>You can customize this page in <code>app/views/dashboard/show.html.erb</code></p>
  </div>
  <div data-controller="hello">
    <input data-hello-target="name" type="text">
    <button data-action="click->hello#greet">Greet</button>
  </div>
  <div class="container mx-auto pt-4">
    <h1>Pages#home</h1>
    <p>Find me in app/views/pages/home.html.erb</p>
    <%= content_tag(:div, "test", data: {
      controller: "counter"
    }) do %>
      <%= content_tag(:p, "you haven't clicked the button", data: {
        counter_target: "output"
      }) %>
      <%= content_tag(:button, "Increment counter", data: {
        action: "click->counter#increment"
      }) %>
    <% end %>
    <hr />
    <a href="#"
       data-reflex="click->Counter#increment"
       data-step="10"
       data-count="<%= @count.to_i %>"
    >Increment <%= @count.to_i %></a>
  </div>
</div>
