<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Registration List Ccs</h1>
    <% @registration_list_ccs ||= records %>
    <% @pagy ||= defined?(pagy) ? pagy : nil %>
    <% if @registration_list_ccs.any? %>
      <%= button_to 'New Registration List Cc', new_registration_list_cc_path, method: :get, disabled: !current_user&.admin?, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @registration_list_ccs.any? %>
    <div class=" rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :cc_id,'Cc', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :context,'Context', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :name,'Name', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Sparte</th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :season_id,'Season', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :discipline_id,'Discipline', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :category_cc_id,'Category cc', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :deadline,'Deadline', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :qualifying_date,'Qualifying date', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :data,'Data', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @registration_list_ccs, :status,'Status', params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @registration_list_ccs.each do |registration_list_cc| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                      <td class="p-3"><%= registration_list_cc.cc_id %></td>
                      <td class="p-3"><%= registration_list_cc.context %></td>
                      <td class="p-3"><%= registration_list_cc.name %></td>
                      <td class="p-3"><%= custom_link_to "#{registration_list_cc.branch_cc.name}(#{registration_list_cc.branch_cc_id})", branch_cc_path(registration_list_cc.branch_cc) %></td>
                      <td class="p-3"><%= registration_list_cc.season.name %></td>
                      <td class="p-3"><%= registration_list_cc.discipline.name %></td>
                      <td class="p-3"><%= registration_list_cc.category_cc.name %></td>
                      <td class="p-3"><%= registration_list_cc.deadline.to_date %></td>
                      <td class="p-3"><%= registration_list_cc.qualifying_date.to_date %></td>
                      <td class="p-3"><%= registration_list_cc.data %></td>
                      <td class="p-3"><%= registration_list_cc.status %></td>

            <td>
              <%= custom_link_to "View", registration_list_cc, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class=" rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
            <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 13.5h3.86a2.25 2.25 0 0 1 2.012 1.244l.256.512a2.25 2.25 0 0 0 2.013 1.244h3.218a2.25 2.25 0 0 0 2.013-1.244l.256-.512a2.25 2.25 0 0 1 2.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 0 0-2.15-1.588H6.911a2.25 2.25 0 0 0-2.15 1.588L2.35 13.177a2.25 2.25 0 0 0-.1.661Z" />
      </svg>
      <div class="flex-1 text-center">

        <%= button_to 'New Registration List Cc', new_registration_list_cc_path, disabled: !current_user&.admin?, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
