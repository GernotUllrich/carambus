<%= form_with(model: ion_content) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :page_id %>
    <%= form.number_field :page_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :html %>
    <%= form.text_area :html, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :level %>
    <%= form.text_field :level, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :scraped_at %>
    <%= form.text_field :scraped_at, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :deep_scraped_at %>
    <%= form.text_field :deep_scraped_at, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :ion_content_id %>
    <%= form.number_field :ion_content_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hidden %>
    <%= form.check_box :hidden, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :position %>
    <%= form.number_field :position, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
