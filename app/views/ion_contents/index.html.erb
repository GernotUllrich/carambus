<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Ion Contents</h1>

    <% if @ion_contents.any? %>
      <%= button_to 'New Ion Content', new_ion_content_path, method: :get, disabled: !current_user&.admin?, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @ion_contents.any? %>
    <div class=" rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :page_id,'Page', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :title,'Title', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :html,'Html', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :level,'Level', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :scraped_at,'Scraped at', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :deep_scraped_at,'Deep scraped at', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :ion_content_id,'Ion content', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :data,'Data', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :hidden,'Data', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @ion_contents, :position,'Position', request.params, class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @ion_contents.each do |ion_content| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                      <td class="p-3"><%= ion_content.page_id %></td>
                      <td class="p-3"><%= ion_content.title %></td>
            <td class="p-3"><pre><%=  %></pre></td>
                      <td class="p-3"><%= ion_content.level %></td>
                      <td class="p-3"><%= ion_content.scraped_at %></td>
                      <td class="p-3"><%= ion_content.deep_scraped_at %></td>
                      <td class="p-3"><%= ion_content.ion_content_id %></td>
                      <td class="p-3"><%= ion_content.data %></td>
                      <td class="p-3"><%= ion_content.hidden %></td>
                      <td class="p-3"><%= ion_content.position %></td>

            <td>
              <%= custom_link_to "View", ion_content, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class=" rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Ion Content</p>
        <%= button_to 'New Ion Content', new_ion_content_path, disabled: !current_user&.admin?, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
