<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Championship Type Ccs</h1>

    <% if @championship_type_ccs.any? %>
      <%= button_to 'New Championship Type Cc', new_championship_type_cc_path, method: :get, disabled: !current_user&.admin?, class: "btn btn-primary"   %>
    <% end %>
  </div>

  <% if @championship_type_ccs.any? %>
    <div class=" rounded shadow table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th class="p-3 uppercase text-left text-xs"><%= sortable @championship_type_ccs, :cc_id,'Cc', request.params, class: 'text-gray-700' %></th>
          <th class="p-3 uppercase text-left text-xs"><%= sortable @championship_type_ccs, :name,'Name', request.params, class: 'text-gray-700' %></th>
          <th class="p-3 uppercase text-left text-xs"><%= sortable @championship_type_ccs, :shortname,'Shortname', request.params, class: 'text-gray-700' %></th>
          <th class="p-3 uppercase text-left text-xs"><%= sortable @championship_type_ccs, :context,'Context', request.params, class: 'text-gray-700' %></th>
          <th class="p-3 uppercase text-left text-xs"><%= sortable @championship_type_ccs, :branch_cc_id,'Sparte', request.params, class: 'text-gray-700' %></th>
          <th class="p-3 uppercase text-left text-xs"><%= sortable @championship_type_ccs, :status,'Status', request.params, class: 'text-gray-700' %></th>
          <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @championship_type_ccs.each do |championship_type_cc| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700">
            <td class="p-3"><%= championship_type_cc.cc_id %></td>
            <td class="p-3"><%= championship_type_cc.name %></td>
            <td class="p-3"><%= championship_type_cc.shortname %></td>
            <td class="p-3"><%= championship_type_cc.context %></td>
            <td class="p-3"><%= custom_link_to "#{championship_type_cc.branch_cc.discipline.name}[#{championship_type_cc.branch_cc.discipline_id}]", discipline_path(championship_type_cc.branch_cc.discipline) %></td>
            <td class="p-3"><%= championship_type_cc.status %></td>

            <td>
              <%= custom_link_to "View", championship_type_cc, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class=" rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Championship Type Cc</p>
        <%= button_to 'New Championship Type Cc', new_championship_type_cc_path, disabled: !current_user&.admin?, class: "btn btn-primary"   %>
      </div>
    </div>
  <% end %>
</div>
