<%= form_with(model: discipline_phase) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :discipline_id %>
    <%= form.number_field :discipline_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :parent_discipline_id %>
    <%= form.number_field :parent_discipline_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :position %>
    <%= form.number_field :position, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= custom_link_to t("cancel"), discipline_phases_path, class: "btn btn-white" %>
    <% else %>
      <%= custom_link_to t("cancel"), discipline_phase_path(@discipline_phase), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
