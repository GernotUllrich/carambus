<%= content_for :title, "Discipline Phases" %>
<%= turbo_stream_from :discipline_phases %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Discipline Phases</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500"><%= I18n.t("sort_by", :default => "Sort By:") %></span>
        <%= sortable @discipline_phases, :name,"Name", request.params, class: "text-gray-700 mr-1" %>
        <%= sortable @discipline_phases, :discipline_id,"Discipline", request.params, class: "text-gray-700 mr-1" %>
        <%= sortable @discipline_phases, :parent_discipline_id,"Parent discipline", request.params, class: "text-gray-700 mr-1" %>
        <%= sortable @discipline_phases, :position,"Position", request.params, class: "text-gray-700 mr-1" %>
        <%= sortable @discipline_phases, :data,"Data", request.params, class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= custom_link_to t("shared.scaffold.new.title", model: "Discipline Phase"), new_discipline_phase_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("discipline_phases" if first_page?), class: " rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "discipline_phases/index", collection: @discipline_phases, as: :discipline_phase, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Discipline Phase</p>
        <%= custom_link_to t("shared.scaffold.new.title", model: "Discipline Phase"), new_discipline_phase_path, disabled: !current_user&.admin?, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
