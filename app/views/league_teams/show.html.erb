<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= custom_link_to 'League Teams', league_teams_path %> > League Team #<%= @league_team.id %></h1>
      <%= custom_link_to 'Edit', edit_league_team_path(@league_team), class: "btn btn-link" %>
    </div>

    <div class=" rounded shadow p-8">
      <div class="mb-4">
        <h5>Name</h5>
        <%= @league_team.name %>
      </div>
      <div class="mb-4">
        <h5>Shortname</h5>
        <%= @league_team.shortname %>
      </div>
      <div class="mb-4">
        <h5>League</h5>
        <%= custom_link_to @league_team.league.name, league_path(@league_team.league) %>
      </div>
<!--      <div class="mb-4">
        <h5>Ba</h5>
        <%#= custom_link_to @league_team.ba_id, "https://nbv.billardarea.de/cms_team  s/show/#{@league_team.ba_id}", class: "yellow_link", target: :_blank %>
      </div>-->
      <div class="mb-4">
        <h5>Club</h5>
        <%= custom_link_to @league_team.club.shortname, club_path(@league_team.club) if @league_team.club.present? %>
      </div>
    </div>
  </div>
  <% if @parties.any? %>
    <h3> Parties</h3>
    <div id="table_wrapper text-base">
      <%= render partial: 'parties/parties_table', locals: { from_index: false, pagy: nil, model_class: Party, records: @parties } %>
    </div>
  <% end %>
</div>
<div class="container mx-auto my-8 px-4">
  <h3><%= custom_link_to "=> Mitglieder", seedings_path(sSearch: "league_team_id:#{@league_team.id}") %></h3>
</div>
