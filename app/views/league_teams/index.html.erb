<% content_for :javascript do %>
  <script>
    function searchLeagueTeams(selectObj, tableOnly) {
      Rails.ajax({
        type: "GET",
        url: "/league_teams?sSearch=" + document.getElementById("search").value.replace(/&/g, '%26') + "&table_only=true",
        success: function (response) {
          var elem = document.getElementById("table_wrapper");
          elem.innerHTML = response.body.innerHTML;
        },
        error: function (response) {
          console.log(response.responseText);
        }
      })
    }
  </script>
<% end %>
<%= render partial: 'shared/index_with_search', locals: {
  model_class: LeagueTeam,
  records: @league_teams,
  title: t('league_team.index.league_teams'),
  new_text: t('league_team.index.new_league_team'),
  new_path: new_league_team_path,
  table_partial: 'league_teams_table'
} %>
