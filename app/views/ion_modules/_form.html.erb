<%= form_with(model: ion_module) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :module_id %>
    <%= form.text_field :module_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ion_content_id %>
    <%= form.number_field :ion_content_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :module_type %>
    <%= form.text_field :module_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :position %>
    <%= form.number_field :position, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :html %>
    <%= form.text_area :html, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
