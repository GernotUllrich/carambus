<%= form_with(model: location) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%- if @location.organizer.present? %>
      <strong><%= "#{@location.organizer_type}:  #{@location.organizer.name}" %></strong>
      <%= form.label :organizer_id %>
      <%= form.hidden_field :organizer_id, value: @location.organizer_id %>
      <%= form.hidden_field :organizer_type, value: @location.organizer_type %>
    <%- elsif @region.present? %>
      <%= form.label :club_id %>
      <%= form.select :club_id, options_for_select(@region.clubs.order(:shortname).map{|club| [club.shortname, club.id]}, @location.club_id) %>
    <% else %>
      <%= form.label :club_id %>
      <%= form.number_field :club_id, class: "form-control", value: @location.club_id %>
    <%- end %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :data %>
    <%= form.text_area :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= custom_link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
