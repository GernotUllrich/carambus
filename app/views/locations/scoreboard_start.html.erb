<!--suppress RubyScope, RubyScope, RubyScope -->
<%= stylesheet_link_tag "scoreboard_start", "data-turbo-track": "reload" %>

<div data-controller="scoreboard-start">
  <div class="nav-icons">
    <%= custom_link_to toggle_dark_mode_location_path(@location), :"data-turbo" => false do %>
      <%= render_svg "icons/adjust", class: "nav-icon", title: "toggle dark mode" %>
    <% end %>
    <%= custom_link_to scoreboard_location_path(@location.md5, sb_state: "welcome", :"data-turbo" => false) do %>
      <%= render_svg "icons/home", class: "nav-icon", title: "home" %>
    <% end %>
  </div>
  <div class="p-14 w-full m-auto flex items-center flex-col bg-cover h-screen karambol-img">
    <%- if table.present? %>
      <h2 class="text-shadow flex text-gray-200 pt-5 text-3vw"><%= "#{table.name}" %></h2>
    <%- end %>
    <h1 class="text-shadow flex text-gray-200 pt-5 text-4vw"><%= t('select_game_mode') %></h1>
    <div class="flex items-center mt-20 flex-row h-1/4 space-x-20">
      <%= custom_link_to t('home.index.tournament'), location_path(@location, sb_state: "tournament", table_id: table.andand.id), data: { turbo: false }, class: "dark:text-white focus:outline-none focus:ring-8 focus:ring-green-500 focus:ring-opacity-90 border-0 btn btn-primary ring-4 h-full text-6vw lg:mr-0 mr-0 lg:mt-4 mt-2 p-1", id: "tournament", tabindex: 1 %>
      <%- if table.present? %>
        <%= custom_link_to t('home.index.training'), placement_location_path(@location, tournament_id: "", table_id: table.id), method: :post, data: { turbo: false }, class: "dark:text-white focus:outline-none focus:ring-8 focus:ring-green-500 focus:ring-opacity-90 border-0 btn btn-primary ring-4 h-full text-6vw lg:mr-0 mr-0 lg:mt-4 mt-2 p-1", id: "training", tabindex: 1 %>
      <%- else %>
        <%= custom_link_to t('home.index.training'), location_path(@location, sb_state: "tables", table_id: table.andand.id), data: { turbo: false }, class: "dark:text-white focus:outline-none focus:ring-8 focus:ring-green-500 focus:ring-opacity-90 border-0 btn btn-primary ring-4 h-full text-6vw lg:mr-0 mr-0 lg:mt-4 mt-2 p-1", id: "training", tabindex: 1 %>
      <%- end %>
    </div>
    <div class="flex items-center mt-20 flex-row h-1/4 space-x-20">
      <%= custom_link_to t('home.index.reservation'), location_path(@location, sb_state: "reservations", table_id: table.andand.id), data: { turbo: false }, class: "dark:text-white focus:outline-none focus:ring-8 focus:ring-green-500 focus:ring-opacity-90 border-0 btn btn-primary ring-4 text-3vw lg:mr-0 mr-0 lg:mt-4 mt-2 p-1", id: "reservations", tabindex: 1 %>
    </div>
  </div>
</div>
