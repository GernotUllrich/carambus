    <%= custom_link_to image_tag("flag_de.png"), { :locale => 'de' }, id: "language", data: { turbo: false }, tabindex: 0 %>
  <% else %>
    <%= custom_link_to image_tag("flag_en.png"), { :locale => 'en' }, id: "language", data: { turbo: false }, tabindex: 0 %>
  <% end %>

  <h1 class="welcome-title text-4vw flex mb-2 text-gray-200"><%= t('welcome') + " - #{@location.name}" %></h1>
  <p class="welcome-subtitle mb-6 text-gray-200 leading-normal text-3vw"><%= t('carambus_manages') %></p>
  
  <span>
    <%= custom_link_to "Start", location_path(sb_state: "start"), class: "welcome-button", id: "start", data: { turbo: false }, tabindex: 1 %>
    <%= custom_link_to "Intro", intro_path, class: "welcome-button", id: "intro", data: { turbo: false }, tabindex: 2 %>
  </span>
  
  <span class="flex items-center flex-row h-1/4 space-x-20">
    <%= custom_link_to t('home.index.reservation'), location_path(@location, sb_state: "reservations"), data: { turbo: false }, class: "welcome-button", id: "reservations", tabindex: 1 %>
  </span>
</div>
