[Unit]
Description=Daily Scoreboard Browser Restart Timer
Documentation=https://github.com/GernotUllrich/carambus

[Timer]
# Run daily at 6:00 AM
OnCalendar=*-*-* 06:00:00

# If system was off at scheduled time, run on next boot
Persistent=true

# Randomize start time by up to 5 minutes to avoid all clients restarting simultaneously
RandomizedDelaySec=5min

[Install]
WantedBy=timers.target
