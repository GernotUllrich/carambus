# NGINX Configuration for <%= @scenario['basename'] %>
# Generated by Carambus Scenario System

# WebSocket support
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

upstream <%= @scenario['basename'] %>_upstream {
    server unix:/var/www/<%= @scenario['basename'] %>/shared/sockets/puma-production.sock;
}

<% if @config['ssl_enabled'] %>
# HTTP to HTTPS redirect
server {
    listen 80;
    server_name <%= @config['webserver_host'] %>;
    return 301 https://$server_name$request_uri;
}

# HTTPS server
server {
    listen 443 ssl http2;
    server_name <%= @config['webserver_host'] %>;

    root /var/www/<%= @scenario['basename'] %>/current/public;

    ssl_certificate /etc/letsencrypt/live/<%= @config['webserver_host'] %>/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/<%= @config['webserver_host'] %>/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    error_log /var/log/<%= @scenario['basename'] %>/error.log debug;
    access_log /var/log/<%= @scenario['basename'] %>/access.log combined;

    location ~ /\. {
        deny all;
    }

    location ^~ /.well-known/acme-challenge/ {
        access_log off;
        log_not_found off;
        auth_basic off;
        root /var/www/<%= @scenario['basename'] %>/current/public;
        autoindex off;
        index index.html;
        try_files $uri $uri/ =404;
    }

    location = /favicon.ico {
        log_not_found off;
        access_log off;
        expires max;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
    }

    location = /robots.txt {
        add_header Content-Type text/plain;
        return 200 "User-agent: *\nDisallow: /\n";
    }

    location /cable {
        proxy_pass http://<%= @scenario['basename'] %>_upstream/cable;
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_pass_request_headers on;
        # access_log /var/www/<%= @scenario['basename'] %>/shared/log/nginx.access.log;
        # error_log /var/www/<%= @scenario['basename'] %>/shared/log/nginx.error.log;
        proxy_buffering off;
        proxy_redirect off;
        proxy_read_timeout 86400;
        break;
    }

    location / {
        root /var/www/<%= @scenario['basename'] %>/current/public;
        try_files $uri $uri/index.html $uri.html @<%= @scenario['basename'] %>_upstream;
    }

    location @<%= @scenario['basename'] %>_upstream {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Sendfile-Type X-Accel-Redirect;

        proxy_connect_timeout 2500;
        proxy_send_timeout 2500;
        proxy_read_timeout 2500;

        proxy_redirect off;

        proxy_pass http://<%= @scenario['basename'] %>_upstream;
        access_log /var/www/<%= @scenario['basename'] %>/shared/log/nginx.access.log;
        error_log /var/www/<%= @scenario['basename'] %>/shared/log/nginx.error.log;
    }
}
<% else %>
