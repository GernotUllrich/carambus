# NGINX Configuration for <%= @scenario['basename'] %>
# Generated by Carambus Scenario System

upstream <%= @scenario['basename'] %>_upstream {
    server unix:/var/www/<%= @scenario['basename'] %>/shared/sockets/puma-production.sock;
}

<% if @config['ssl_enabled'] %>
# HTTP to HTTPS redirect
server {
    listen 80;
    server_name <%= @config['webserver_host'] %>;
    return 301 https://$server_name$request_uri;
}

# HTTPS server
server {
    listen 443 ssl http2;
    server_name <%= @config['webserver_host'] %>;
    
    ssl_certificate /etc/letsencrypt/live/<%= @config['webserver_host'] %>/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/<%= @config['webserver_host'] %>/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    location / {
        proxy_pass http://<%= @scenario['basename'] %>_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Ssl on;
    }
}
<% else %>
# HTTP server only
server {
    listen <%= @config['webserver_port'] %>;
    server_name <%= @config['webserver_host'] %>;
    
    location / {
        proxy_pass http://<%= @scenario['basename'] %>_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
<% end %>
