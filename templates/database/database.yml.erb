---
default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

<%= @environment %>:
  <<: *default
  database: <%= @config["database_name"] %>
  <% if @config["database_username"] %>
  username: <%= @config["database_username"] %>
  <% end %>
  <% if @config["database_password"] %>
  password: <%= @config["database_password"] %>
  <% end %>
