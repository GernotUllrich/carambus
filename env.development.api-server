# Rails Configuration
RAILS_HOST=0.0.0.0
RAILS_PORT=3001
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Development Settings
RAILS_DEBUG=true
RAILS_LOGGER_LEVEL=debug
WEB_CONCURRENCY=1
