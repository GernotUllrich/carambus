SMTP_ENABLE_STARTTLS_AUTO=false

# External Services (Development)
GOOGLE_CALENDAR_API_KEY=
DEEPL_API_KEY=
BA_API_KEY=
CC_API_KEY=

# Security (Development only!)
SECRET_KEY_BASE=development_secret_key_base_placeholder
